<h1>プラン編集</h1>

<%= form_for @plan ,url: staff_plan_path, html: {class: 'form-horizontal'}  do |f|%>
  <div class="form-group">
    <%= f.label :title,class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title , class: 'form-control' %>
      <% if @plan.errors.any? %>
  		  <%= @plan.errors.full_messages_for(:title)[0] %>
  		<% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content,class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :content,class: 'form-control'%>
      <% if @plan.errors.any? %>
  		  <%= @plan.errors.full_messages_for(:content)[0] %>
  		<% end %>
    </div>
  </div>

  <div class="form-group">
		<%= f.label :closeness,class: 'col-sm-2 control-label'  %>
    <div class="col-sm-10">
		  <%= f.number_field :closeness ,class: 'form-control'%>
    </div>
		<% if @plan.errors.any? %>
		  <%= @plan.errors.messages[:closeness][0] %>
		<% end %>
	</div>

	<div class="form-group">
		<%= f.label :satisfaction,class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
		  <%= f.number_field :satisfaction,class: 'form-control' %>
    </div>
		<% if @plan.errors.any? %>
		  <%= @plan.errors.messages[:satisfaction][0] %>
		<% end %>
	</div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 text-center">
      <%= f.submit class: 'btn btn-primary'%>
      <%= link_to 'キャンセル',staff_plans_path,class:'btn btn-default' %>
    </div>
  </div>
<% end %>
