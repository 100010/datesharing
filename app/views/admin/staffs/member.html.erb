<h1 class="page-header">スタッフ一覧</h1>

<table class="table table-bordered table-hover table-responsive">
	<thead>
		<tr class="info">
			<th>ID</th>
			<th>名前</th>
			<th>登録日</th>
		</tr>
	</thead>
	<tbody>
    <% @staff.each do |staff| %>
  		<tr>
  			<th><%= link_to staff.id ,staff_path(staff.id)%></th>
  			<td><%= staff.name %></td>
  			<td><%= staff.created_at %></td>
  		</tr>
    <% end %>
	</tbody>
</table>
