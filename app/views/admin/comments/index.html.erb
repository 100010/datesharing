<h1 class="page-header">コメント一覧</h1>

<table class="table table-bordered table-hover table-responsive">
	<thead>
		<tr class="success">
			<th>ID</th>
			<th>内容</th>
			<th>ユーザID</th>
			<th>プランID</th>
      <th>作成日</th>
		</tr>
	</thead>
	<tbody>
		<% @comments.each do |comment| %>
	    <tr>
				<td><%= link_to comment.id , edit_staff_comment_path(comment.id) %></td>
				<td><%= comment.body %> </td>
				<td><%= link_to comment.user_id , edit_staff_user_path(comment.user_id) %></td>
        <td><%= link_to comment.plan_id , edit_staff_plan_path(comment.plan_id) %></td>
				<td><%= comment.updated_at %> </td>
	    </tr>
		<% end %>
	</tbody>
</table>
