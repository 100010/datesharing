<h1 class="page-header">ユーザ一詳細</h1>

<table class="table table-bordered table-hover table-responsive">
	<thead>
		<tr class="success">
			<th>ID</th>
			<th>ユーザ名</th>
			<th>登録日</th>
			<th>更新日</th>
      <th>区分</th>
		</tr>
	</thead>
	<tbody>
    <tr>
			<td><%= @user.id %></td>
			<td><%= @user.username %> </td>
			<td><%= @user.created_at %></td>
			<td><%= @user.updated_at %> </td>
      <td><%= !@user.planner.nil? ? 'プランナー' : '一般ユーザ' %></td>
    </tr>
	</tbody>
</table>

<%= link_to '一覧に戻る' , staff_users_path ,class: 'btn btn-default'%>
