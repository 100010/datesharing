<h1 class="page-header">ユーザ一覧</h1>

<table class="table table-bordered table-hover table-responsive">
	<thead>
		<tr class="success">
			<th>ID</th>
			<th>ユーザ名</th>
			<th>登録日</th>
			<th>更新日</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
	    <tr>
				<td><%= link_to user.id , edit_staff_user_path(user.id) %></td>
				<td><%= user.username %> </td>
				<td><%= user.created_at %></td>
				<td><%= user.updated_at %> </td>
	    </tr>
		<% end %>
	</tbody>
</table>
